{
  "name": "swagsticker.com-demo",
  "author": "Spencer Lepine @spencerlepine",
  "description": "E-commerce store, a fullstack Next.js (App Router) application",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "browserslist": [
    "chrome 64",
    "edge 79",
    "firefox 67",
    "opera 51",
    "safari 12"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "NEXT_TELEMETRY_DISABLED=1 NODE_ENV=production next build && npm run copy:assets",
    "comment": "TODO_OPTIMIZATION - serve assets from CDN instead",
    "copy:assets": "cp -rn public .next/standalone && cp -rn .next/static .next/standalone/.next/static",
    "test": "echo 'No tests added yet' && exit 0",
    "start": "node .next/standalone/server.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@stripe/react-stripe-js": "^2.8.1",
    "@stripe/stripe-js": "^4.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "fuse.js": "^7.0.0",
    "jose": "^5.9.6",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.11",
    "nodemailer": "^6.9.16",
    "printify-sdk-js": "1.0.2",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "sharp": "0.32.6",
    "stripe": "^16.9.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "use-shopping-cart": "^3.2.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.11",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "postcss": "^8",
    "prettier": "2.8.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "requirePragma": false,
    "insertPragma": false,
    "endOfLine": "lf",
    "jsxBracketSameLine": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx|json|css|md)": [
      "prettier --write"
    ]
  }
}