{
  "name": "swagsticker.com-demo",
  "author": "Spencer Lepine @spencerlepine",
  "description": "E-commerce store, a fullstack Next.js (App Router) application",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0"
  },
  "browserslist": [
    "chrome 64",
    "edge 79",
    "firefox 67",
    "opera 51",
    "safari 12"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "test": "echo 'No tests added yet' && exit 0",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "next": "14.2.11",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^16.9.0",
    "use-shopping-cart": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.11",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "postcss": "^8",
    "prettier": "2.8.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "requirePragma": false,
    "insertPragma": false,
    "endOfLine": "lf",
    "jsxBracketSameLine": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx|json|css|md)": [
      "prettier --write"
    ]
  }
}
