{
  "name": "swagsticker.com",
  "author": "Spencer Lepine @spencerlepine",
  "description": "E-commerce store, a fullstack Next.js (App Router) application",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.11.1"
  },
  "browserslist": [
    "chrome 64",
    "edge 79",
    "firefox 67",
    "opera 51",
    "safari 12"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "NEXT_TELEMETRY_DISABLED=1 NODE_ENV=production next build && npm run copy:assets",
    "pre-commit": "npm run build && npm test && npm run docs:generate",
    "copy:assets": "cp -rn public .next/standalone && cp -rn .next/static .next/standalone/.next/static",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node .next/standalone/server.js",
    "docs:generate": "node docs/generate-api-docs.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^2.8.1",
    "@stripe/stripe-js": "^4.9.0",
    "fuse.js": "^7.0.0",
    "jose": "^5.9.6",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.11",
    "nodemailer": "^6.9.16",
    "printify-sdk-js": "^1.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "sharp": "0.32.6",
    "stripe": "^16.9.0",
    "use-shopping-cart": "^3.2.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "eslint": "^8",
    "eslint-config-next": "14.2.11",
    "husky": "4.3.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "10.5.4",
    "node-fetch": "^3.3.2",
    "postcss": "^8",
    "prettier": "2.8.8",
    "supertest": "^7.1.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "warn"
    }
  },
  "prettier": {
    "printWidth": 180,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "requirePragma": false,
    "insertPragma": false,
    "endOfLine": "lf",
    "jsxBracketSameLine": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx|json|css|md)": [
      "prettier --write"
    ]
  }
}
